@using System.Web.Mvc.Html
@using MvcSiteMapProvider.Web.Html.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/mainJs")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NetDocs MVC Beta", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink(@Resources.Resource1.MenuCelula, "Index", "Celula")</li>
                    <li>@Html.ActionLink(@Resources.Resource1.MenuSetor, "Index", "Setor")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content"> 
        <!--SITE MAP-->  
        <br /><br />
        <h3>@ViewBag.Title</h3>
        @if (Html.MvcSiteMap().SiteMap.CurrentNode != Html.MvcSiteMap().SiteMap.RootNode)
        {
            <div class="breadcrumb" style="display:inline-block;width:100%;">
                <span class="glyphicon glyphicon-home" aria-hidden="true" style="color:#666666"></span>
                @Html.MvcSiteMap().SiteMapPath()
            </div>
        }                
        @RenderBody()        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

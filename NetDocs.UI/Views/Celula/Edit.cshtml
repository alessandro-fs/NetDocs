@model NetDocs.UI.ViewModels.CelulaViewModel
@{ViewBag.Title = string.Format(Resources.Resource1.SiteMapAlterar, Resources.Resource1.MenuCelula);}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <!--BOTÕES-->
        <div class="control-group" style="text-align:left;">
            <div class="controls">
                @Html.ActionLink(@Resources.Resource1.Voltar, "Index", new { Pagina = ViewBag.PaginaAtual, Ordenacao = ViewBag.Ordenacao, FiltrarNome = ViewBag.NomeCorrente }, new { @class = "btn btn-default" })
                <input type="submit" id="btnSalvar" value="@Resources.Resource1.Salvar" class="btn btn-primary" />
            </div>
        </div>
        <hr />
        @Html.ValidationSummary(false, string.Empty, new { @class = "alert alert-warning error-label" })
        @Html.Partial("_NotificationsPartial")
        <div class="panel-body panel panel-default">
            <div class="form-group">
                @Html.HiddenFor(model => model.CelulaId)
                @Html.LabelFor(model => model.Nome, new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.Nome, "*")                
                @Html.EditorFor(model => model.Nome, new { @id = "Nome", htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataAlteracao, new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.DataAlteracao, "*")
                @Html.EditorFor(model => model.DataAlteracao.Value, new { @id = "DataAlteracao", htmlAttributes = new { @class = "form-control", @readonly = "true" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UsuarioAlteracao, new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.UsuarioAlteracao, "*")
                @Html.EditorFor(model => model.UsuarioAlteracao, new { @id = "UsuarioAlteracao", htmlAttributes = new { @class = "form-control", @readonly = "true" } })
            </div>            
        </div>
        <hr />
        <!--BOTÕES-->
        <div class="control-group" style="text-align:left;">
            <div class="controls">
                @Html.ActionLink(@Resources.Resource1.Voltar, "Index", new { Pagina = ViewBag.PaginaAtual, Ordenacao = ViewBag.Ordenacao, FiltrarNome = ViewBag.NomeCorrente }, new { @class = "btn btn-default" })
                <input type="submit" id="btnSalvarRodape" value="@Resources.Resource1.Salvar" class="btn btn-primary" />
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<!--LOADING MESSAGE BUTTONS-->
@Html.Partial("_LoadingClickPartial")
